<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chat_messageLayout"

    >


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/reply_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#B2BEB7"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:layout_above="@+id/reply_text"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/back_txt" />

    <TextView
        android:text=""
        android:textSize="20dp"
        android:background="@drawable/message_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/cnt_address"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:id="@+id/back_txt"
        android:textColor="#B2BEB7"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:id="@+id/cnt_address"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/back_txt"
        android:textColor="#B2BEB7"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/message_smsreply"
        android:id="@+id/smsReply_img"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/reply_text" />


    <!-- <TextView
         android:text="Messages"
         android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true"
         android:layout_marginStart="12dp"
         android:id="@+id/textView" />-->


</RelativeLayout>


